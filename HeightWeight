    private void calculateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int height_value = Integer.parseInt(height.getText());
        double weight_value = Double.parseDouble(weight.getText());

       
       if (height_value==150) {
          
                if(weight_value == 41.6){
                    outPanel.setBackground(Color.green);
                    output.setText("ปกติ");
                }   
                if(weight_value == 51.8){
                    outPanel.setBackground(Color.yellow);
                    output.setText("ท้วม");
                }   
                if(weight_value == 56.3){
                    outPanel.setBackground(Color.pink);
                    output.setText("อ้วนระดับ1");
                }   
                if(weight_value == 67.5){
                     outPanel.setBackground(Color.red);
                    output.setText("อ้วนระดับ2");
                }
       }
           if (height_value==155) {
                if(weight_value == 44.4){
                    outPanel.setBackground(Color.green);
                    output.setText("ปกติ");
                }   if(weight_value == 55.3){
                    outPanel.setBackground(Color.yellow);
                    output.setText("ท้วม");
                }   if(weight_value == 60.1){
                    outPanel.setBackground(Color.pink);
                    output.setText("อ้วนระดับ1");
                }   if(weight_value == 72.1){
                    outPanel.setBackground(Color.red);
                    output.setText("อ้วนระดับ2");
                }
           }
          if (height_value==160) {
                if(weight_value == 47.4){
                    outPanel.setBackground(Color.green);
                    output.setText("ปกติ");
                }   if(weight_value == 58.9){
                    outPanel.setBackground(Color.yellow);output.setText("ท้วม");
                }   if(weight_value == 64.0){
                    outPanel.setBackground(Color.pink);output.setText("อ้วนระดับ1");
                }   if(weight_value == 76.8){
                    outPanel.setBackground(Color.red);output.setText("อ้วนระดับ2");
                }
            }
           if (height_value==165) {
                if(weight_value == 50.4){
                    outPanel.setBackground(Color.green);  output.setText("ปกติ");
                }   if(weight_value == 62.6){
                    outPanel.setBackground(Color.yellow);output.setText("ท้วม");
                }   if(weight_value == 68.1){
                    outPanel.setBackground(Color.pink);output.setText("อ้วนระดับ1");
                }   if(weight_value == 81.7){
                    outPanel.setBackground(Color.red);output.setText("อ้วนระดับ2");
                }
            }
            if (height_value==170) {
                if(weight_value == 53.5){
                    outPanel.setBackground(Color.green); output.setText("ปกติ");
                }   if(weight_value == 66.5){
                    outPanel.setBackground(Color.yellow);output.setText("ท้วม");
                }   if(weight_value == 72.3){
                    outPanel.setBackground(Color.pink);output.setText("อ้วนระดับ1");
                }   if(weight_value ==86.7){
                    outPanel.setBackground(Color.red);output.setText("อ้วนระดับ2");
                }
            }
            if (height_value==175) {
                if(weight_value == 56.7){
                    outPanel.setBackground(Color.green);output.setText("ปกติ");
                }   if(weight_value == 70.4){
                    outPanel.setBackground(Color.yellow);output.setText("ท้วม");
                }   if(weight_value == 76.6){
                    outPanel.setBackground(Color.pink);output.setText("อ้วนระดับ1");
                }   if(weight_value == 91.9){
                    outPanel.setBackground(Color.red);output.setText("อ้วนระดับ2");
                }
            }
           if (height_value==180) {
                if(weight_value == 59.9){
                    outPanel.setBackground(Color.green);output.setText("ปกติ");
                }   if(weight_value == 74.5){
                    outPanel.setBackground(Color.yellow);output.setText("ท้วม");
                }   if(weight_value == 81.0){
                    outPanel.setBackground(Color.pink);output.setText("อ้วนระดับ1");
                }   if(weight_value == 97.2){
                    outPanel.setBackground(Color.red);output.setText("อ้วนระดับ2");
                }
            }
         
              
        
        
    }                                         

    private void clearActionPerformed(java.awt.event.ActionEvent evt) {                                      
        height.setText("");
        weight.setText("");
       output.setText("");
        
        outPanel.setBackground(null);
    }                                     

    private void exitActionPerformed(java.awt.event.ActionEvent evt) {                                     
        System.exit(0);
    }                                    

